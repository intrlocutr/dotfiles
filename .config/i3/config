# i3 config file (v4)

set $mod Mod4
set $refresh_i3status killall -SIGUSR1 i3status

# preferred applications
set $files caja
set $mail evolution
set $www firefox
set $calc mate-calc
set $screenshot mate-screenshot
set $editor gvim
set $graphical_editor pluma
set $passwords keepassxc

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8, pango:Noto Sans 8

for_window [all] title_window_icon yes

# Screen lock
set $lock i3lock -c 000000
exec --no-startup-id xss-lock --transfer-sleep-lock -- $lock --nofork
#bindsym XF86ScreenSaver exec --no-startup-id $lock
# This will turn off the monitor and subsequently trigger i3lock because of xss-lock
bindsym XF86ScreenSaver exec --no-startup-id sleep 0.3 && xset dpms force off

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Media controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioStop exec --no-startup-id playerctl stop
bindsym Shift+XF86AudioPlay exec zenity --info --title "Now Playing" --text "<b>$(playerctl metadata title)</b>\n$(playerctl metadata artist)"

# Backlight
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 5
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 5

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# program launcher
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+Escape exec --no-startup-id i3-input

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# scratchpad
bindsym $mod+Shift+BackSpace move scratchpad
bindsym $mod+BackSpace scratchpad show

# split
bindsym $mod+backslash split h
bindsym $mod+minus split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s layout stacking
bindsym $mod+s layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent
# focus the child container
bindsym $mod+c focus child

# workspace names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
set $ws_game "<b>g</b>ame"
set $ws_im "<b>i</b>m"
set $ws_mail "üñÇ"
set $ws_media "‚èØ"
set $ws_term "<b>t</b>erm"
set $ws_work "<b>w</b>ork"

# workspace switch
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+g workspace $ws_game
bindsym $mod+i workspace $ws_im
bindsym $mod+m workspace $ws_mail; exec --no-startup-id pidof $mail || (i3-msg "exec $mail" && i3-msg "layout tabbed")
bindsym $mod+p workspace $ws_media
bindsym $mod+t workspace $ws_term
#; exec --no-startup-id pidof $TERMINAL || i3-msg "exec --no-startup-id $TERMINAL"
bindsym $mod+w workspace $ws_work
#; exec --no-startup-id pidof $www || i3-msg "exec $www"
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+slash exec --no-startup-id i3-input -F 'workspace "%s"' -P 'Switch to workspace: '

# output switch
bindsym $mod+bracketleft focus output left
bindsym $mod+bracketright focus output right
bindsym $mod+apostrophe focus output up
bindsym $mod+semicolon focus output down

# container move
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
bindsym $mod+Shift+g move container to workspace $ws_game
bindsym $mod+Shift+i move container to workspace $ws_im
bindsym $mod+Shift+m move container to workspace $ws_mail
bindsym $mod+Shift+p move container to workspace $ws_media
bindsym $mod+Shift+t move container to workspace $ws_term
bindsym $mod+Shift+w move container to workspace $ws_work
bindsym $mod+Shift+Tab move container to workspace back_and_forth
bindsym $mod+Shift+bracketleft move container to output left; focus output left
bindsym $mod+Shift+bracketright move container to output right; focus output right
bindsym $mod+Shift+apostrophe move container to output up; focus output up
bindsym $mod+Shift+semicolon move container to output down; focus output down

# workspace navigate
bindsym $mod+comma workspace prev
bindsym $mod+period workspace next
bindsym $mod+n exec --no-startup-id i3-input -F 'rename workspace to "%s"' -P 'New workspace name: '

# workspace move
bindsym $mod+Control+bracketleft move workspace to output left
bindsym $mod+Control+bracketright move workspace to output right
bindsym $mod+Control+apostrophe move workspace to output up
bindsym $mod+Control+semicolon move workspace to output down

# Application rules
# Get instance & class by running xprop
for_window [instance="$calc"] floating enable
for_window [class="KeePassXC"] floating enable
for_window [instance="Places" class="firefox"] floating enable
for_window [instance="Browser" class="firefox"] floating enable
for_window [instance="pavucontrol"] floating enable
for_window [instance="evolution-alarm-notify"] floating enable

#assign [instance="$mail"] $ws_mail
#assign [title="ncspot"] $ws_media
for_window [instance="spotify"] move container to workspace $ws_media
assign [instance="zoom"] $ws_im
assign [instance="discord"] $ws_im

# Application launchers
bindsym Print exec $screenshot
set $launcher Control
bindsym $mod+$launcher+e exec $editor
bindsym $mod+$launcher+t exec $graphical_editor
bindsym $mod+$launcher+b exec $www
bindsym $mod+$launcher+n exec $www --private-window
bindsym $mod+$launcher+f exec $files
bindsym $mod+$launcher+a exec $calc
bindsym $mod+$launcher+y workspace $ws_media; exec --no-startup-id spotify
bindsym $mod+$launcher+u workspace $ws_media; exec --no-startup-id i3-sensible-terminal -t ncspot -e ncspot
bindsym $mod+$launcher+s exec --no-startup-id xlinks -g
bindsym $mod+$launcher+p exec --no-startup-id $passwords

# color scheme
# class                 border  backgr. text    indicator child_border
client.focused          #994c4c #772828 #ffffff #f42e2e   #772828
client.focused_inactive #333333 #6a695f #ffffff #484e50   #6a695f
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
set $resize_factor 3 px or 3 ppt
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window‚Äôs width.
        # Pressing right will grow the window‚Äôs width.
        # Pressing up will shrink the window‚Äôs height.
        # Pressing down will grow the window‚Äôs height.
        bindsym h resize shrink width $resize_factor
        bindsym j resize grow height $resize_factor
        bindsym k resize shrink height $resize_factor
        bindsym l resize grow width $resize_factor

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position top
        status_command i3status
        tray_output primary
}

